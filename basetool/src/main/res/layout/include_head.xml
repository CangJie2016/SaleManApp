<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_base_headArea"
    android:layout_width="match_parent"
    android:layout_height="46dp"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <Button
        android:id="@+id/btn_base_head_back"
        android:layout_width="wrap_content"
        android:minWidth="@dimen/head_height"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:drawableLeft="@drawable/btn_head_back"
        android:text=""
        android:textSize="@dimen/font_medium"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:drawablePadding="4dp"
        android:textColor="@color/white"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_base_head_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text=""
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textSize="@dimen/font_huge"
        android:textColor="@color/font_black" />
    <Button
        android:id="@+id/btn_base_head_right_button"
        android:layout_width="wrap_content"
        android:minWidth="48dp"
        android:layout_height="match_parent"
        android:textSize="@dimen/font_medium"
        android:text="筛选"
        android:paddingRight="@dimen/margin_small"
        android:paddingLeft="@dimen/margin_small"
        android:background="@color/transparent"
        android:layout_alignParentRight="true"
        android:textColor="@color/font_black"
        android:visibility="gone"
        />


    <ImageButton
        android:id="@+id/btn_base_head_right_imgbutton"
        android:layout_width="wrap_content"
        android:minWidth="@dimen/head_height"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:paddingRight="@dimen/margin_fit_top"
        android:layout_alignParentRight="true"
        android:visibility="gone" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2px"
        android:background="@color/division_color"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>

